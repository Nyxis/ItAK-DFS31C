{# templates/product/create.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouveau produit{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Cr√©er un nouveau produit</h1>

    {{ form_start(form) }}

    <div class="mb-4">
        {{ form_label(form.name, null, {'attr': {'class': 'text-lg font-semibold mb-1'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'border border-gray-300 rounded px-4 py-2'}}) }}
        {{ form_errors(form.name, {'attr': {'class': 'text-red-600 mt-1'}}) }}
    </div>

    <div class="mb-4">
        {{ form_label(form.price, null, {'attr': {'class': 'text-lg font-semibold mb-1'}}) }}
        {{ form_widget(form.price, {'attr': {'class': 'border border-gray-300 rounded px-4 py-2'}}) }}
        {{ form_errors(form.price, {'attr': {'class': 'text-red-600 mt-1'}}) }}
    </div>

    <div class="mt-4">
        {{ form_widget(form.save, {'attr': {'class': 'bg-blue-500 text-white px-4 py-2 rounded'}}) }}
    </div>

    {{ form_end(form) }}
{% endblock %}
